{
    "key": "suave",
    "label": "SuAVE",
    "logo": "/asset/png/logos/suave-logo-small.png",
    "description": "Survey Analysis via Visual Exploration",
    "image": {
        "registry": "",
        "name": "ndslabs/suave",
        "tags": [
            "latest"
        ]
    },
    "display": "stack",
    "access": "external",
    "depends": [
        {
            "key": "mongo",
            "required": true
        }
    ],
    "config": [
        {
            "name": "STOREHOST",
            "value": "$(MONGO_PORT_27017_TCP_ADDR)",
            "label": "MongoDB Hostname",
            "canOverride": true
        },
        {
            "name": "STOREPORT",
            "value": "27017",
            "label": "MongoDB Port",
            "canOverride": true
        },
        {
            "name": "STOREDB",
            "value": "suave",
            "label": "MongoDB Database",
            "canOverride": true
        },
        {
            "name": "EMAIL_HOST",
            "value": "",
            "label": "SMTP Hostname",
            "canOverride": true
        },
        {
            "name": "EMAIL_USER",
            "value": "",
            "label": "SMTP Username",
            "canOverride": true
        },
        {
            "name": "EMAIL_PASS",
            "value": "",
            "label": "SMTP Password",
            "canOverride": true
        }
    ],
    "ports": [
        {
            "port": 3001,
            "protocol": "http",
            "contextPath": "/"
        }
    ],
    "readinessProbe": {
        "type": "tcp",
        "path": "/",
        "port": 3001,
        "initialDelay": 10,
        "timeout": 480
    },
    "resourceLimits": {
        "cpuMax": 500,
        "cpuDefault": 100,
        "memMax": 1000,
        "memDefault": 50
    },
    "info": "https://nationaldataservice.atlassian.net/wiki/display/NDSC/NDS+Labs+Services/SuAVE"
}
