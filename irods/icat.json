{
    "key": "icat",
    "label": "iRODS iCAT",
    "description": "open source data management software",
    "image": {
		"name": "ndslabs/irods-icat",
		"tags": ["4.1.3", "latest"]
	},
    "logo": "https://github.com/nds-org/ndslabs/raw/cddr/gui/asset/png/logos/irods-logo.png",
    "access": "external",
    "display": "stack",
    "ports": [
        {
            "port": 1247,
            "protocol": "tcp"
        },
        {
            "port": 8080,
            "protocol": "http",
            "contextPath": "/"
        }
    ],
    "config":  [
        {
            "name": "RODS_ZONE",
            "value": "fedZone",
            "label": "iRODS zone",
            "canOverride": true
        },
        {
            "name": "RODS_PASSWORD",
            "value": "",
            "label": "iRODS rods user password",
            "canOverride": true,
            "isPassword": true
        }
    ],
	"volumeMounts":[
	   { "mountPath": "/var/lib/irods/iRODS/Vault" }
    ],
    "depends": [
      { "key": "cloudbrowserui", "required": false }
    ],
    "resourceLimits": {
        "cpuMax": 400,
        "cpuDefault": 100,
        "memMax": 500,
        "memDefault": 200
    },
	"repositories" : [
		{
			"type" : "git",
			"url" : "https://github.com/irods/irods"
		}
	],
	"developerEnvironment" : "cloud9cpp",
    "info": "https://nationaldataservice.atlassian.net/wiki/display/NDSC/IRODS",
    "tags" : ["2", "6", "14", "36"]
}
