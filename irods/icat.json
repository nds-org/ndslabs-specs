{
    "key": "icat",
    "label": "iRODS iCAT",
	"description": "open source data management software",
    "image": {
		"name": "ndslabs/irods-icat",
		"tags": ["latest"]
	},
	"access": "external",
	"display": "stack",
    "ports": [
        {
            "port": 1247,
            "protocol": "tcp"
        },
        {
            "port": 8080,
            "protocol": "http"
        }
    ],
    "config":  [
        {
            "name": "RODS_ZONE",
            "value": "fedZone",
            "label": "iRODS zone",
            "canOverride": true
        },
        {
            "name": "RODS_PASSWORD",
            "value": "",
            "label": "iRODS rods user password",
            "canOverride": true,
            "isPassword": true
        }
    ],
	"volumeMounts":[
	   { "mountPath": "/var/lib/irods/iRODS/Vault", "name": "icat" }
    ],
    "depends": [
      { "key": "cloudbrowserui", "required": false }
    ],
    "resourceLimits": {
        "cpuMax": 400,
        "cpuDefault": 100,
        "memMax": 500,
        "memDefault": 200
    }
}
