{
    "key": "pyclowderpycharm",
    "label": "PyCharm for pyClowder(Xpra)",
    "description": "pyClowder PyCharm development environment  (Xpra)",
    "logo": "https://nationaldataservice.atlassian.net/wiki/download/attachments/15532048/pycharm-logo.png",
    "image": {
        "registry": "",
        "name": "ndslabs/pycharm-clowder-xpra",
        "tags": [
            "latest",
            "1.0"
        ]
    },
    "display": "stack",
    "access": "external",
    "ports": [
        {
            "port": 10000,
            "protocol": "http"
        }
    ],
    "depends": [
      {
        "key": "clowder",
        "required": true,
        "shareConfig": false
      },
      {
        "key": "mongo",
        "required": true,
        "shareConfig": false
      },
      {
        "key": "rabbitmq",
        "required": true,
        "shareConfig": false
      }
    ],
    "volumeMounts": [
        {
            "mountPath": "/root"
        }
    ],
    "resourceLimits": {
        "cpuMax": 500,
        "cpuDefault": 100,
        "memMax": 4096,
        "memDefault": 1024
    },
    "readinessProbe" : {
        "type" : "http",
        "path" : "/favicon.ico",
        "port" : 10000,
        "initialDelay": 10,
        "timeout" : 600
    },
	"tags" : ["7", "20"]
}
