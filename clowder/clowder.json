{
    "label": "Clowder",
    "key": "clowder",
    "description": "A scalable data repository where you can share, organize and analyze data.",
    "image": {
		"name": "ndslabs/clowder",
		"tags" : ["0.9.2"]
	},
	"display": "stack",
	"access": "external",
    "depends": [
        {
            "key": "mongo",
            "required": true
        },
        {
            "key": "elasticsearch",
            "required": false
        },
        {
            "key": "imagepreview",
            "required": false
        },
        {
            "key": "imagemetadata",
            "required": false
        },
        {
            "key": "pdfpreview",
            "required": false
        },
        {
            "key": "audiopreview",
            "required": false
        },
        {
            "key": "speech2text",
            "required": false
        },
        {
            "key": "videopreview",
            "required": false
        },
        {
            "key": "plantcv",
            "required": false
        }
    ],
    "config":  [
        {
            "name": "SMTP_HOST",
            "value": "smtp.ncsa.illinois.edu",
            "canOverride": true
        },
        {
            "name": "ELASTICSEARCH_CLUSTERNAME",
            "value": "clowder",
            "canOverride": false
        },
        {
            "name": "RABBITMQ_EXCHANGE",
            "value": "clowder",
            "canOverride": false
        },
        {
            "name": "TOOLMANAGER_URI",
            "value": "http://localhost:8082",
            "label": "ToolServer address",
            "canOverride": true
        }
    ],
    "ports": [
        {
            "port": 9000,
            "protocol": "http"
        }
    ],
    "resourceLimits": {
        "cpuMax": 500,
        "cpuDefault": 100,
        "memMax": 1000,
        "memDefault": 250
    }
}

