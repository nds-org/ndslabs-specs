{
    "key": "logstash",
    "label": "Logstash",
    "image": {
		"name" : "logstash",
		"tags" : ["2.2"]
	},
    "access":"internal",
    "depends": [
        {
            "key": "elasticsearch2",
            "required": true
        }
    ],
    "ports": [
        { "port": 5000, "protocol": "tcp" }
    ],
    "command": [ "logstash", "-e" ],
    "args" : [ "output { elasticsearch { hosts => \"$(ELASTICSEARCH2_PORT_9200_TCP_ADDR):$(ELASTICSEARCH2_PORT_9200_TCP_PORT)\" } } input { tcp { port => 5000 type => syslog } }" ],
   "readinessProbe" : {
        "type" : "tcp",    
        "port" : 5000,
        "initialDelay": 30,
        "timeout" : 600
    },
    "resourceLimits": {
        "cpuMax": 1000,
        "cpuDefault": 100,
        "memMax": 250,
        "memDefault": 100
    },
	"tags" : ["30"]
}
