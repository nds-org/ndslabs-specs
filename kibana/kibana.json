{
    "key": "kibana",
    "label": "Kibana (ELK)",
    "image": {
		"name" : "kibana",
		"tags" : ["4.4"]
	},
    "description": "An open source data visualization platform",
	"display": "stack",
	"access":"external",
    "depends": [
        {
            "key": "elasticsearch2",
            "required": true
        },
        {
            "key": "logstash",
            "required": true
        },
        {
            "key": "logspout",
            "required": true
        }
    ],
    "ports": [
        { "port": 5601, "protocol": "http" }
    ],
    "config":  [
        {
            "name": "ELASTICSEARCH_URL",
            "value": "http://$(ELASTICSEARCH2_PORT_9200_TCP_ADDR):$(ELASTICSEARCH2_PORT_9200_TCP_PORT)",
            "canOverride": false
        }
    ],
    "readinessProbe" : {
        "type" : "http",
        "path" : "bundles/src/ui/public/images/kibana.svg",
        "port" : 5601,
        "initialDelay": 10,
        "timeout" : 600
    },
    "resourceLimits": {
        "cpuMax": 200,
        "cpuDefault": 100,
        "memMax": 250,
        "memDefault": 100
    },
	"tags" : ["30"]
}
