{
    "key": "dspace",
    "label": "DSpace",
    "description": "Turnkey software used for creating open access digital repositories.",
    "logo": "https://nationaldataservice.atlassian.net/wiki/download/attachments/17170448/dspace-small.png",
    "image": {
        "name": "ndslabs/dspace",
        "tags": [
            "latest"
        ]
    },
    "display": "stack",
    "access": "external",
    "depends": [
        {
            "key": "postgres",
            "required": true
        }
    ],
    "config": [
        {
            "name": "POSTGRES_SCHEMA",
            "value": "dspace",
            "label": "Postgres Database",
            "isPassword": false,
            "canOverride": false
        },
        {
            "name": "POSTGRES_USER",
            "useFrom" : "postgres",
            "canOverride": false
        },
        {
            "name": "POSTGRES_PASSWORD",
            "useFrom" : "postgres",
            "canOverride": false
        },
        {
            "name": "POSTGRES_DB_HOST",
            "value": "$(POSTGRES_PORT_5432_TCP_ADDR)",
            "label": "Postgres Host",
            "isPassword": false,
            "canOverride": true
        },
        {
            "name": "ADMIN_EMAIL",
            "value": "$(NDSLABS_EMAIL)",
            "label": "Admin email",
            "isPassword": false,
            "canOverride": true
        },
        {
            "name": "ADMIN_PASSWD",
            "value": "",
            "label": "Admin Password",
            "isPassword": true,
            "canOverride": true
        }
    ],
    "ports": [
        {
            "port": 8080,
            "protocol": "http"
        }
    ],
    "repositories": [
        {
            "url": "https://github.com/DSpace/DSpace",
            "type": "git"
        }
    ],
    "readinessProbe": {
        "type": "http",
        "path": "/themes/Mirage/images/favicon.ico",
        "port": 8080,
        "initialDelay": 120,
        "timeout": 360
    },
    "volumeMounts": [
        {
            "mountPath": "/dspace/assetstore"
        }
    ],
    "resourceLimits": {
        "cpuMax": 500,
        "cpuDefault": 100,
        "memMax": 3000,
        "memDefault": 50
    },
    "tags": [
        "11",
        "16"
    ],
    "info": "https://nationaldataservice.atlassian.net/wiki/display/NDSC/DSpace"
}
