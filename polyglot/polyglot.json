{
    "key": "polyglot",
    "label": "Polyglot",
    "logo": "https://github.com/nds-org/ndslabs/raw/develop/gui/asset/png/logos/ndslabs-badge.png",
    "description": "Polyglot is a distributed service which carries out file format conversions utilizing the open, save, import, and export capabilities amongst a dynamic and extensible collection of available software. Polyglot address the need to access content amongst the many possible formats available to store data digitally. Polyglot also addresses the problem of information loss that inevitably occurs through conversion and provides means of quantifying that loss and then minimizing it during future conversions.",
    "maintainer": "lambert8@illinois.edu",
    "image": {
        "registry": "",
        "name": "ncsa/polyglot",
        "tags": [
            "develop"
        ]
    },
    "display": "stack",
    "access": "external",
    "depends": [
        {
            "key": "mongo",
            "required": true
        },
        {
            "key": "rabbitmq",
            "required": true
        },
        {
            "key": "convhtmldoc"
        },
        {
            "key": "convimagemagick"
        }
    ],
    "config": [
        {
            "name": "RABBITMQ_URI",
            "value": "amqp://guest:guest@rabbitmq:5672/%2f",
            "label": "RabbitMQ URI",
            "canOverride": true
        },
        {
            "name": "MONGO_SERVER_URI",
            "value": "mongodb://localhost:27017/",
            "label": "MongoDB Server URI",
            "canOverride": true
        },
        {
            "name": "MONGO_SERVER",
            "label": "MongoDB Server",
            "canOverride": true
        },
        {
            "name": "MONGO_DATABASE_DAP",
            "value": "dap",
            "label": "MongoDB DAP Database"
        },
        {
            "name": "MONGO_DATABASE_POLYGLOT",
            "value": "polyglot",
            "label": "MongoDB Polyglot Database"
        },
        {
            "name": "MONGO_LOGGING",
            "value": "false",
            "label": "Mongo Logging",
            "canOverride": true
        }
    ],
    "ports": [
        {
            "port": 8184,
            "protocol": "http",
            "contextPath": "/"
        }
    ],
    "readinessProbe": {
        "type": "",
        "path": "",
        "port": 0,
        "initialDelay": 0,
        "timeout": 0
    },
    "resourceLimits": {
        "cpuMax": 500,
        "cpuDefault": 100,
        "memMax": 1000,
        "memDefault": 50
    },
    "securityContext": {},
    "authRequired": true
}
