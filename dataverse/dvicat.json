{
    "key": "dvicat",
    "label": "Dataverse iRODS iCAT",
    "image": {
		"name": "ndslabs/dataverse-icat",
		"tags": ["latest"]
	},
	"access": "external",
    "ports": [
        {
            "port": 1247,
            "protocol": "tcp"
        }
    ],
    "config":  [
        {
            "name": "RODS_ZONE",
            "value": "dvnZone",
            "label": "iRODS local zone",
            "canOverride": true,
            "isPassword": false
        },
        {
            "name": "PRESERVATION_USER",
            "value": "dataverse",
            "label": "iRODS user",
            "canOverride": true,
            "isPassword": false
        },
        {
            "name": "PRESERVATION_PASSWORD",
            "value": "",
            "label": "iRODS password",
            "canOverride": true,
            "isPassword": true
        },
        {
            "name": "PRESERVATION_ZONE",
            "value": "fedZone",
            "label": "iRODS preservation zone",
            "canOverride": true,
            "isPassword": false
        },
        {
            "name": "PRESERVATION_SERVER_IP",
            "value": "",
            "label": "iRODS preservation server IP",
            "canOverride": true,
            "isPassword": false
        },
        {
            "name": "PRESERVATION_SERVER_PORT",
            "value": "1247",
            "label": "iRODS preservation server port",
            "canOverride": true,
            "isPassword": false
        },
        {
            "name": "CURATOR_EMAIL",
            "value": "",
            "label": "Curator email",
            "canOverride": true,
            "isPassword": false
        },
        {
            "name": "CRON_FREQUENCY",
            "label": "Cron frequency",
            "value": "2",
            "canOverride": true,
            "isPassword": false
        },
        {
            "name": "SMTP_SERVER",
            "value": "smtp.ncsa.illinois.edu:25",
            "label": "Mail server",
            "canOverride": true,
            "isPassword": false
        }
    ],
    "volumeMounts":[
       { "mountPath": "/var/lib/irods/iRODS/Vault", "name": "dvicat" }
    ],
    "resourceLimits": {
        "cpuMax": "1000",
        "cpuDefault": "100",
        "memMax": "500",
        "memDefault": "100"
    }
}
