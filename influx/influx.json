{
    "key": "influx",
    "label": "InfluxDB",
    "description": "Scalable datastore for metrics, events, and real-time analytics",
    "logo": "https://github.com/nds-org/ndslabs-specs/raw/develop/influx/influx-logo.png",
    "image": {
        "registry": "",
        "name": "influxdb",
        "tags": [
            "1.2"
        ]
    },
    "display": "stack",
    "access": "internal",
    "config": [
        {
            "name": "INFLUXDB_HTTP_MAX_ROW_LIMIT",
            "value": "1000000",
            "canOverride": true
        },
        {
            "name": "INFLUXDB_DATA_QUERY_LOG_ENABLED",
            "value": "false",
            "canOverride": true
        },
        {
            "name": "INFLUXDB_REPORTING_DISABLED",
            "value": "true",
            "canOverride": true
        },
        {
            "name": "INFLUXDB_HTTP_AUTH_ENABLED",
            "value": "false",
            "canOverride": true
        },
        {
            "name": "INFLUXDB_HTTP_ENABLED",
            "value": "true",
            "canOverride": true
        }
    ],
    "ports": [
        {
            "port": 8086,
            "protocol": "http",
            "contextPath": "/"
        }
    ],
    "readinessProbe": {
        "type": "",
        "path": "",
        "port": 0,
        "initialDelay": 0,
        "timeout": 0
    },
    "volumeMounts": [
        {
            "mountPath": "/var/lib/influxdb/"
        }
    ],
    "resourceLimits": {
        "cpuMax": 500,
        "cpuDefault": 100,
        "memMax": 1000,
        "memDefault": 50
    },
    "info": "https://nationaldataservice.atlassian.net/wiki/display/NDSC/InfluxDB"
}
